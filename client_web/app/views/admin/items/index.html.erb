<h2 class="page-header">菜单管理
  <a href="<%= new_admin_item_path %>" class="btn btn-info pull-right">
    增加菜单
  </a>
</h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th>菜名</th>
      <th>价格</th>
      <th>描述</th>
      <th>分类</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><%= item.desc %></td>
        <td><%= item.kind_id %></td>
        <td>
          <%= link_to '查看', admin_item_path(item), class: 'btn btn-info' %>
          <%= link_to '编辑', edit_admin_item_path(item), class: 'btn btn-info' %>
          <%= link_to '删除', admin_item_path(item), method: :delete, data: { confirm: 'Are you sure?' },  class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @items %>