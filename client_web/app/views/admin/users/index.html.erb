<h3 class="page-header">用户管理
  <a href="<%= new_admin_user_path %>" class="btn btn-info pull-right">
    <i class="icon-user"></i>增加用户
  </a>
</h3>

<table class="table table-hover">
  <thead>
    <tr>
      <th>姓名</th>
      <th>用户名</th>
      <th>角色</th> 
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.nickname %></td>
        <td><%= user.username %></td>
        <td><%= role_desc(user) %></td>
        <td>
          <span class="pull-right">
            <%= link_to "编辑", edit_admin_user_path(user), :class => "btn btn-info" %>
            <%= link_to "删除", admin_user_path(user), :method => :delete, :class => "btn btn-danger" %>
          </span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @users %>