  <div id="order-page">
    <div class="span6">
      <button class="btn btn-primary btn-block btn-large">
        私房牛头面馆
      </button>

      <table class="table table-striped order-list">
        <thead>
          <tr>
            <th></th>
            <th>菜名</th>
            <th>备注</th>
            <th>份数</th>
            <th>单价</th>
            <th>小计</th>
          </tr>
        </thead>
        <tbody>
          <% 1.upto(5) do |index| %>
            <tr class="order <%= "active" if index == 2 %>">
              <td><%= index %></td>
              <td>萝卜排骨汤</td>
              <td>少盐/多糖/微辣</td>
              <td>2</td>
              <td>5.00</td>
              <td>10.00</td>
            </tr>
          <% end %>
          <tr>
            <td colspan="6"><p style="color: red">合计 <span style="font-size: 2em;font-style: italic;">30.00</span></p></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="span6">
      <div class="tabbable">
        <ul class="nav nav-tabs" data-tabs="tabs" id="dish">
          <li>
            <a href="#tab1" data-toggle="tab" class="active">川菜</a>            
