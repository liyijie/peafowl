<%= simple_form_for(@item, html: {multipart: true}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :price %>
    <%= f.input :desc %>
    <%= f.input :kind_id %>
  </div>

  <div class="form-inputs">
    <%= file_field_tag :attachment %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
